<!DOCTYPE html>
<html lang="en">
<head>
	<title>SMART CARD UNIDA Gontor</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="/css/style.css">

</head>
<body>
    <div class="content">
        <div class="profile">
			<div id="imgmhs">

			</div>
            <div class="biodata">
                <h1 class="name" id="nama_mahasiswa"></h1>
                <hr>
                <table class="table">
                    <tr>
                        <td><h3>NIM</h3></td>
                        <td><h3> : </h3></td>
                        <td><h3 id="nim"></h3></td>
                    </tr>
                    <tr>
                        <td>
                            <h3>PROGRAM STUDI</h3>
                        </td>
                        <td>
                            <h3> : </h3>
                        </td>
                        <td>
                            <h3 id="nama_prodi"></h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>SEMESTER</h3>
                        </td>
                        <td>
                            <h3> : </h3>
                        </td>
                        <td>
                            <h3 id="semester"></h3>
                        </td>
                    </tr>
					<tr>
                        <td>
                            <h3>ASRAMA</h3>
                        </td>
                        <td>
                            <h3> : </h3>
                        </td>
                        <td>
                            <h3 id="asrama"></h3>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h3>WAKTU</h3>
                        </td>
                        <td>
                            <h3> : </h3>
                        </td>
                        <td>
                            <h3 id="waktu"></h3>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="footer"></div>
    </div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script>
		$(document).ready(function(){
			function loadlink(){
				console.log('load link')
				$.ajax({
					url:"/smcard/dataKeluar",
					type:"GET",
					async : true,
					success:function(data)
					{
						console.log(data);
						$("#nim").text(data.profil.nim_mhs);
						$("#nama_mahasiswa").text(data.profil.nama_mahasiswa);
						$("#nama_prodi").text(data.profil.nama_prodi);
						$("#semester").text(data.profil.semester);
						$("#asrama").text(data.profil.asrama+' ('+data.profil.kamar+')');
						$("#waktu").text(data.waktu);
						$("#imgmhs").html('<img class="img-fluid img-mhs" src="https://siakad.unida.gontor.ac.id/simak-mastermahasiswa/get-foto?nim='+data.profil.nim_mhs+'" alt="IMG">')
					}
				});
			}

			loadlink()
			setInterval(function(){
				loadlink()
			},1000)
	    });
	</script>
</body>
</html>